{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <center>
    <h1>Rental reservatin</h1>
    </center>
<div class="container">
    <table class="table">
        <tbody>

        <tr>
            <th>Starting date</th>
            <td>{{ location.dateDebut ? location.dateDebut|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Ending date</th>
            <td>{{ location.dateFin ? location.dateFin|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Price in dinar</th>
            <td>{{ location.prixLocation }}</td>
        </tr>

        <tr>
            <th>Matricule</th>
            <td>{{ location.matricule }}</td>
        </tr>
        <tr>
            <th>Model</th>
            <td>{{ location.modele }}</td>
        </tr>
        <tr>
            <th>Car image</th>
            <td>
                {% if location.imageVoiture %}
                    <img src="{{ asset('uploads/voiture_images/' ~ location.imageVoiture) }}" alt="Image de la voiture" class="card-img-top" style="max-width: 200px;">
                {% else %}
                    No image available.
                {% endif %}
            </td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to Reservations</a>

    <a href="{{ path('app_location_edit', {'idLocation': location.idLocation}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
</div>
{% endblock %}
